generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id Int @id @default(autoincrement())
  title String
  imageURL String
  description String
  author String?
  altText String
  cards Card[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Card {
  id Int @id @default(autoincrement())
  boardId Int
  board Board @relation(fields: [boardId], references: [id])
  title String
  imageURL String
  description String
  upvotes Int @default(0)
  author String?
  altText String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
